<h1>Events</h1>
<hr>
<%= @event.creator.username%>
<br>
<%= @event.title %>
<br>
<%= @event.location%>
<br>
<%= @event.date%>
<br>
<%= @event.description%>
<br>
<% if !attendee? && user_signed_in? %>
  <%= link_to "Attend this event", add_event_path, method: :put %>
<% end %>
<h2>Attendees</h2>
<ul>
  <% @event.attendees.each do |attendee|%>
    <%= attendee.username %>
    <br>
  <% end %>
</ul>