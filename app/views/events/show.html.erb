<br>
<br>
<h1>Events</h1>
<hr>
<%= @event.creator.username%>
<br>
<%= @event.title %>
<br>
<%= @event.location%>
<br>
<%= @event.date%>
<br>
<%= @event.description%>
<br>
<% if !@event.attendees.exists?(session[:id]) && session[:id] != nil%>
  <%= link_to "Attend this event", "/events/add/#{@event.id}", method: :put %>
<% end %>
<h2>Attendees</h2>
<ul>
  <% @event.attendees.each do |attendee|%>
    <%= attendee.username %>
    <br>
  <% end %>
</ul>
